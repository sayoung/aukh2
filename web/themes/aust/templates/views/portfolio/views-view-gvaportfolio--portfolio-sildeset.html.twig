{% if attributes -%}
   <div{{ attributes }}>
{% endif %}
   
{% if header %}
  <header>
    {{ header }}
  </header>
{% endif %}

{% if title %}
  <h3>{{ title }}</h3>
{% endif %}
  
  <div class="uk-slideset-init" data-uk-slideset="{animation: 'scale',xlarge:{{column}}, large:{{column}}, medium:2, small:1}">
    <div class="portfolio-filter clearfix">
      <ul class="uk-subnav uk-subnav-pill nav nav-tabs">
        {% if show_all %}
          <li data-uk-filter="" class="uk-active"><a data-uk-filter='' href="#">{{"All"|t}}</a></li>
        {% endif %}  
        {% for term in terms %}
          <li data-uk-filter="{{term.tid}}"><a href="#" class="btn-filter {{pid}}" data-filter=".{{term.tid}}"><span>{{term.name}}</span></a></li>
        {% endfor %}
      </ul> 
    </div>  
    <div class="uk-slidenav-position uk-margin">
      <ul class="uk-grid uk-slideset">
        {% for row in rows %}
          {{ row.content|raw }}
        {% endfor %}
      </ul>
      <a href="#" class="uk-slidenav uk-slidenav-previous" data-uk-slideset-item="previous"></a>
      <a href="#" class="uk-slidenav uk-slidenav-next" data-uk-slideset-item="next"></a>
      <ul class="uk-slideset-nav uk-dotnav uk-flex-center"></ul>
    </div>  
  </div> 
   
{% if attributes -%}
    </div>
{% endif %}
